{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@transport/nats-streaming-transport": [
        "libs/nats-streaming-transport/src"
      ],
      "@transport/nats-streaming-transport/*": [
        "libs/nats-streaming-transport/src/*"
      ]
    }
  }
}